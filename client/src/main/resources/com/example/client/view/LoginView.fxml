<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/21.0.2" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.client.controller.LoginController">
    <center>
        <GridPane hgap="10" vgap="10" BorderPane.alignment="CENTER">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>
            <Label text="Email" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <TextField fx:id="emailField" promptText="utente@example.com" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

            <Label text="Nome visualizzato" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <TextField fx:id="displayNameField" promptText="Mario Rossi" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

            <Label text="Azure ID" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
            <TextField fx:id="azureIdField" promptText="GUID Azure" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

            <Label text="Access Token" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
            <TextArea fx:id="accessTokenArea" prefRowCount="3" wrapText="true" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

            <Label fx:id="statusLabel" text="Inserisci le credenziali Microsoft" GridPane.rowIndex="4" GridPane.columnIndex="0" GridPane.columnSpan="2"/>

            <HBox spacing="10" alignment="CENTER_RIGHT" GridPane.rowIndex="5" GridPane.columnIndex="1">
                <Button fx:id="loginButton" text="Accedi" onAction="#handleLogin"/>
                <Hyperlink fx:id="registerLink" text="Registrati" onAction="#openRegister"/>
            </HBox>
        </GridPane>
    </center>
</BorderPane>
