<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/17.0.2" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.client.controller.RegisterController">
    <center>
        <GridPane hgap="10" vgap="10" BorderPane.alignment="CENTER">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>

            <Label text="Azure ID" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <TextField fx:id="azureIdField" promptText="GUID Azure" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

            <Label text="Email" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <TextField fx:id="emailField" promptText="utente@example.com" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

            <Label text="Nome visualizzato" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
            <TextField fx:id="displayNameField" promptText="Mario Rossi" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

            <Label text="Codice agente" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
            <TextField fx:id="agentCodeField" promptText="Codice identificativo" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

            <Label text="Password locale" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
            <PasswordField fx:id="passwordField" promptText="Password sicura" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

            <Label text="Team" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
            <TextField fx:id="teamNameField" promptText="Vendite" GridPane.rowIndex="5" GridPane.columnIndex="1"/>

            <Label text="Ruolo" GridPane.rowIndex="6" GridPane.columnIndex="0"/>
            <TextField fx:id="roleNameField" promptText="Agent" GridPane.rowIndex="6" GridPane.columnIndex="1"/>

            <Label fx:id="messageLabel" text="Compila il modulo per registrarti" GridPane.rowIndex="7" GridPane.columnIndex="0" GridPane.columnSpan="2"/>

            <HBox spacing="10" alignment="CENTER_RIGHT" GridPane.rowIndex="8" GridPane.columnIndex="1">
                <Button fx:id="registerButton" text="Registra" onAction="#handleRegister"/>
                <Button text="Torna al login" onAction="#openLogin"/>
            </HBox>
        </GridPane>
    </center>
</BorderPane>
